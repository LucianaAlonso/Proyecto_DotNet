        </div>
        <div class="card-body">
          <h5 class="card-title">Planes</h5>
          <p class="card-text">
            @foreach (var plan in ViewBag.Planes)
              {
                  @if(@plan.ObraSocial.ID == @os.ID){
                    <div style="font-family: 'Quicksand', sans-serif;">â€¢ @plan.Nombre</div>
                  }
              }
          </p>
        </div>
      </div>
 }

  </div>
</div>